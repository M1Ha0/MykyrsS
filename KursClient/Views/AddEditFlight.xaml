<Window x:Class="KursClient.Views.AddEditFlight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KursClient.Views"
        mc:Ignorable="d"
        Background="#333"
        Title="Добавление рейса" Height="710" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
        <Label Content="Введите название самолета" Margin="20 0" Foreground="White"/>
        <TextBox x:Name="Аirplane" Text="{Binding Аirplane}" Margin="20 15"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content="Введите место вылета" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="Departure" Text="{Binding Departure}" Margin="20 15"/>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Label Content="Введите место прилета" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="Destination" Text="{Binding Destination}"  Margin="20 15"/>
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Label Content="Выберите дату вылета" Margin="20 0" Foreground="White"/>
            <DatePicker x:Name="Date" SelectedDate="{Binding Date}" Margin="20 15"/>
        </StackPanel>
        <StackPanel Grid.Row="4">
            <Label Content="Выберите время вылета" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="TimeDeparture" Text="{Binding TimeDeparture}" Margin="20 15"/>
        </StackPanel>
        <StackPanel Grid.Row="5">
            <Label Content="Введите время полета" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="TimeFlight" Text="{Binding TimeFlight}" Grid.Row="4" Margin="20 15"/>
            
        </StackPanel>
        <StackPanel Grid.Row="6">
            <Label Content="Введите цену" Margin="20 0" Foreground="White"/>
            <TextBox x:Name="Price" Text="{Binding Price}" Margin="20 15"/>
        </StackPanel>
    
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="OK" Grid.Column="0" Margin="20 10" Height="50" Click="Button_Click" Style="{StaticResource DialogStyle}"/>
            <Button Content="Cancel" Grid.Column="1" Margin="20 10" Height="50" Click="Button_Click_1" Style="{StaticResource DialogStyle}"/>
        </Grid>
    </Grid>
</Window>
